<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundDefault"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingTop="@dimen/modules_padding_top"
        android:paddingBottom="@dimen/modules_padding_bottom">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_rounded_trapezium"
            android:backgroundTint="@color/red_color_badge"
            android:padding="4dp"
            android:textAlignment="center"
            android:textAppearance="?textAppearanceSubtitle1"
            android:textColor="?colorSurface"
            tools:text="خبر لحظه‌ای" />

        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:sliderAnimationDuration="600"
            app:sliderIndicatorEnabled="false"
            app:sliderScrollTimeInSec="3"
            app:sliderStartAutoCycle="true" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/show_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="@string/show_all"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?colorSecondary"
            app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_left_24"
            app:drawableTint="?colorSecondary" />
    </LinearLayout>
</layout>