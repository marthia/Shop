<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="2000"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1080">

    <shape
        android:innerRadius="12dp"
        android:shape="ring"
        android:thickness="3dp"
        android:useLevel="false">
        <size
            android:width="70dp"
            android:height="70dp" />

        <gradient
            android:centerColor="@color/colorSecondaryVariant"
            android:centerY="0.5"
            android:endColor="@color/colorOnSurface"
            android:startColor="@color/colorOnSurface"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>